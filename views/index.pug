extends layout

block content
  //- Move the title and link inside the head block
  block head
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css')

  //- Move the body content below the title/link
  body
    h1 Express
    p Welcome to Express
    p Hello, This is Venkata Durga Yenumula

    p Welcome to My App
    p(id='boost') Add in extra

    button(type="button", class="btn btn-secondary", onclick="boost()") Sample Button

    //- Move the script to the bottom of the page
    script.
      let value = 0;
      let amt = 3;

      function boost() {
        amt += 1;
        value += amt;
        document.getElementById('boost').textContent = `Boosted ${value} by ${amt}`;
      }
